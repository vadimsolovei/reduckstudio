---
layout: layouts/base.njk
bodyClass: productpage
---

{% if hero %}
<section class="hero container"{% if hero.bgImage %} style="background-image: url('{{ hero.bgImage }}')"{% endif %}>
  <nav class="breadcrumb" aria-label="Breadcrumb">
    <a href="/#projects" class="breadcrumb-link">works</a>
    <span class="breadcrumb-separator">/</span>
    <span class="breadcrumb-current">{{ hero.title | safe }}</span>
  </nav>
  <h1>{{ hero.title | breakAfterFirst | safe }}</h1>
</section>
{% endif %}

<section class="project-overview container">
  {% for block in contentBlocks %}
  <div class="project-overview-content">
    <div class="project-overview-main">
      <h3 class="project-overview-label">{{ block.label }}</h3>
      <h2 class="project-overview-title">{{ block.title }}</h2>
    </div>

    <div class="project-overview-description">
      {% if block.type == "paragraph" %}
      <p>{{ block.content }}</p>
      {% elif block.type == "list" %}
      <ul class="project-overview-list">
        {% if block.listTitle %}
        <h4 class="project-overview-list_title">{{ block.listTitle }}</h4>
        {% endif %}
        {% for item in block.items %}
        <li>{{ item }}</li>
        {% endfor %}
      </ul>
      {% endif %}
    </div>

    {% if block.meta %}
    <div class="project-meta">
      {% if block.meta.industry %}
      <div class="project-meta-row">
        <h4 class="project-meta-label">Индустрия</h4>
        <div class="project-meta-tags">
          {% for tag in block.meta.industry %}
          <span class="project-meta-tag">{{ tag }}</span>
          {% endfor %}
        </div>
      </div>
      {% endif %}

      {% if block.meta.projectUrl %}
      <div class="project-meta-row">
        <h4 class="project-meta-label">{{ block.meta.projectUrl.label }}</h4>
        <div class="project-meta-content">
          <a href="{{ block.meta.projectUrl.url }}" class="project-meta-link" target="_blank" rel="noopener noreferrer">
            {% if block.meta.projectUrl.icon %}{{ block.meta.projectUrl.icon | safe }}{% endif %}
            <span>{{ block.meta.projectUrl.text | default(block.meta.projectUrl.url) }}</span>
          </a>
        </div>
      </div>
      {% endif %}

      {% if block.meta.services %}
      <div class="project-meta-row">
        <h4 class="project-meta-label">Услуги</h4>
        <div class="project-meta-tags">
          {% for tag in block.meta.services %}
          <span class="project-meta-tag">{{ tag }}</span>
          {% endfor %}
        </div>
      </div>
      {% endif %}

      {% if block.meta.projectDevUrl %}
      <div class="project-meta-row">
        <h4 class="project-meta-label">{{ block.meta.projectDevUrl.label }}</h4>
        <div class="project-meta-content">
          <a href="{{ block.meta.projectDevUrl.url }}" class="project-meta-link" target="_blank" rel="noopener noreferrer">
            {% if block.meta.projectDevUrl.icon %}{{ block.meta.projectDevUrl.icon | safe }}{% endif %}
            <span>{{ block.meta.projectDevUrl.text | default(block.meta.projectDevUrl.url) }}</span>
          </a>
        </div>
      </div>
      {% endif %}

    </div>
    {% endif %}
  </div>

  {# Render galleries positioned after this contentBlock #}
  {% set blockIndex = loop.index0 %}
  {% for gallery in galleries %}
  {% if gallery.position == blockIndex %}
  <div class="project-gallery">
    {% if gallery.type == "single" %}
    <div class="project-gallery-single">
      <img src="{{ gallery.image }}" alt="{{ gallery.alt }}" loading="lazy" />
    </div>
    {% elif gallery.type == "grid-4" %}
    <div class="project-gallery-grid-4">
      {% for img in gallery.images %}
      <img src="{{ img.src }}" alt="{{ img.alt }}" loading="lazy" />
      {% endfor %}
    </div>
    {% elif gallery.type == "grid-2" %}
    <div class="project-gallery-grid-2">
      {% for img in gallery.images %}
      <img src="{{ img.src }}" alt="{{ img.alt }}" loading="lazy" />
      {% endfor %}
    </div>
    {% endif %}
  </div>
  {% endif %}
  {% endfor %}

  {% endfor %}
</section>

{% if testimonial %}
<section class="client-testimonial container">
  <p class="testimonial-label">От клиента:</p>
  <div class="testimonial-content">

    <blockquote class="testimonial-quote">{{ testimonial.quote }}</blockquote>

    <div class="testimonial-author">
      <div class="author-avatar">
        <img src="{{ testimonial.avatar }}" alt="{{ testimonial.name }}" loading="lazy" />
      </div>
      <div class="author-info">
        <h4 class="author-name">{{ testimonial.name }}</h4>
        <p class="author-title">{{ testimonial.role }}</p>
      </div>
    </div>
  </div>
</section>
{% endif %}

{% if navigation %}
<section class="project-navigation">
  {% if navigation.prev %}
  <a href="{{ navigation.prev.url }}" class="project-nav-item project-nav-prev">
    <div class="project-logo">
      {% if navigation.prev.image %}<img src="{{ navigation.prev.image }}" alt="{{ navigation.prev.title }}" loading="lazy" />{% endif %}
    </div>
    <div class="project-nav-info">
      <span class="project-nav-label">Предыдущая работа</span>
      <h3 class="project-nav-title">{{ navigation.prev.title }}</h3>
    </div>
  </a>
  {% else %}
  <div class="project-nav-item project-nav-prev project-nav-disabled"></div>
  {% endif %}

  <div class="project-nav-divider"></div>

  {% if navigation.next %}
  <a href="{{ navigation.next.url }}" class="project-nav-item project-nav-next">
    <div class="project-nav-info">
      <span class="project-nav-label">Следующая работа</span>
      <h3 class="project-nav-title">{{ navigation.next.title }}</h3>
    </div>
    <div class="project-logo">
      {% if navigation.next.image %}<img src="{{ navigation.next.image }}" alt="{{ navigation.next.title }}" loading="lazy" />{% endif %}
    </div>
  </a>
  {% else %}
  <div class="project-nav-item project-nav-next project-nav-disabled"></div>
  {% endif %}
</section>
{% endif %}

{% include "components/contact-section.njk" %}
